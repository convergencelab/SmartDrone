<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context=".drone.DroneActivity">

    <!-- Piano Image -->
    <ImageView
        android:id="@+id/piano_img"
        android:layout_width="355dp"
        android:layout_height="164dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/piano_image_description"
        android:padding="@dimen/piano_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Active Key -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/active_key_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/drone_buttons_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/piano_img">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/active_key_button"
            android:layout_width="@dimen/active_key_button_size"
            android:layout_height="@dimen/active_key_button_size"
            android:background="@drawable/active_key_background_transition"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/active_key_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/active_key_button"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Drone Buttons -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/drone_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/active_key_layout">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/drone_sound_button"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/drone_button_margin"
            android:layout_marginLeft="@dimen/drone_button_margin"
            app:backgroundTint="@color/colorPrimaryLight"
            app:borderWidth="@dimen/drone_button_border_width"
            app:elevation="0dp"
            app:fabCustomSize="@dimen/main_fab_size_bigger"
            app:srcCompat="@drawable/ic_drone_sound" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/drone_control_button"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:backgroundTint="@color/colorPrimaryLight"
            app:borderWidth="@dimen/drone_button_border_width"
            app:elevation="0dp"
            app:fabCustomSize="@dimen/main_fab_size_bigger"
            app:srcCompat="@drawable/ic_play_drone" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/drone_preferences_button"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/drone_button_margin"
            android:layout_marginRight="@dimen/drone_button_margin"
            app:backgroundTint="@color/colorPrimaryLight"
            app:borderWidth="@dimen/drone_button_border_width"
            app:elevation="0dp"
            app:fabCustomSize="@dimen/main_fab_size_bigger"
            app:srcCompat="@drawable/ic_preferences" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
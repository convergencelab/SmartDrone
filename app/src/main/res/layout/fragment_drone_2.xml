<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".v2.views.DroneFragment2">

        <com.convergencelabstfx.pianoview.PianoView
            android:id="@+id/piano"
            android:layout_width="320dp"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            app:enableMultiKeyHighlighting="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:showPressMode="onClick" />


        <com.convergencelabstfx.smartdrone.v2.views.DroneButton
            android:id="@+id/activeKey_button"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:layout_constraintTop_toBottomOf="@id/piano"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <!-- Drone Buttons -->
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/drone_buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activeKey_button">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginStart="@dimen/drone_button_margin"
                android:layout_marginLeft="@dimen/drone_button_margin"
                android:background="@drawable/fab_background"
                android:padding="3dp">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/drone_sound_button"
                    style="@style/Widget.MaterialComponents.FloatingActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@color/drone_fab_color"
                    app:borderWidth="0dp"
                    app:elevation="0dp"
                    app:fabCustomSize="@dimen/main_fab_size_bigger"
                    app:rippleColor="@android:color/darker_gray"
                    app:srcCompat="@drawable/ic_drone_sound" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/fab_background"
                android:padding="3dp">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/drone_control_button"
                    style="@style/Widget.MaterialComponents.FloatingActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@color/drone_fab_color"
                    app:borderWidth="0dp"
                    app:elevation="0dp"
                    app:fabCustomSize="@dimen/main_fab_size_bigger"
                    app:rippleColor="@android:color/darker_gray"
                    app:srcCompat="@drawable/ic_play_drone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_marginEnd="@dimen/drone_button_margin"
                android:background="@drawable/fab_background"
                android:padding="3dp">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/drone_preferences_button"
                    style="@style/Widget.MaterialComponents.FloatingActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@color/drone_fab_color"
                    app:borderWidth="0dp"
                    app:elevation="0dp"
                    app:fabCustomSize="@dimen/main_fab_size_bigger"
                    app:rippleColor="@android:color/darker_gray"
                    app:srcCompat="@drawable/ic_preferences" />

            </LinearLayout>



        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
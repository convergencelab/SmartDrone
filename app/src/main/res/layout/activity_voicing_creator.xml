<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    tools:context="com.convergencelab.smartdrone.templatecreator.TemplateCreatorActivityOld">

    <EditText
        android:id="@+id/voicing_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/voicing_name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- Container for four voicing columns -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4.5"
        app:layout_constraintTop_toBottomOf="@+id/voicing_name_edit_text">

        <!-- First column -->
        <LinearLayout
            android:id="@+id/voice_column_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <Button
                android:id="@+id/voice_button_7"
                android:layout_width="@dimen/voice_button_height"
                android:layout_height="@dimen/voice_button_height"
                android:text="Button" />
            <Button
                android:id="@+id/voice_button_5"
                android:layout_width="@dimen/voice_button_height"
                android:layout_height="@dimen/voice_button_height"
                android:text="Button" />
            <Button
                android:id="@+id/voice_button_3"
                android:layout_width="@dimen/voice_button_height"
                android:layout_height="@dimen/voice_button_height"
                android:text="Button" />
            <Button
                android:id="@+id/voice_button_1"
                android:layout_width="@dimen/voice_button_height"
                android:layout_height="@dimen/voice_button_height"
                android:text="Button" />
        </LinearLayout>

        <!-- Second Column -->
        <LinearLayout
            android:id="@+id/voice_column_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <Button
                android:id="@+id/voice_button_6"
                android:layout_width="@dimen/voice_button_height"
                android:layout_height="@dimen/voice_button_height"
                android:text="Button" />
            <Button
                android:id="@+id/voice_button_4"
                android:layout_width="@dimen/voice_button_height"
                android:layout_height="@dimen/voice_button_height"
                android:text="Button" />
            <Button
                android:id="@+id/voice_button_2"
                android:layout_width="@dimen/voice_button_height"
                android:layout_height="@dimen/voice_button_height"
                android:text="Button" />
        </LinearLayout>

        <!-- PaddingColumn -->
        <LinearLayout
            android:id="@+id/voice_column_padding"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">
        </LinearLayout>

        <!-- Third Column -->
        <LinearLayout
            android:id="@+id/voice_column_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <Button
                android:id="@+id/voice_button_14"
                android:layout_width="@dimen/voice_button_height"
                android:layout_height="@dimen/voice_button_height"
                android:text="Button" />
            <Button
                android:id="@+id/voice_button_12"
                android:layout_width="@dimen/voice_button_height"
                android:layout_height="@dimen/voice_button_height"
                android:text="Button" />
            <Button
                android:id="@+id/voice_button_10"
                android:layout_width="@dimen/voice_button_height"
                android:layout_height="@dimen/voice_button_height"
                android:text="Button" />
            <Button
                android:id="@+id/voice_button_8"
                android:layout_width="@dimen/voice_button_height"
                android:layout_height="@dimen/voice_button_height"
                android:text="Button" />
        </LinearLayout>

        <!-- Fourth Column -->
        <LinearLayout
            android:id="@+id/voice_column_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <Button
                android:id="@+id/voice_button_13"
                android:layout_width="@dimen/voice_button_height"
                android:layout_height="@dimen/voice_button_height"
                android:text="Button" />
            <Button
                android:id="@+id/voice_button_11"
                android:layout_width="@dimen/voice_button_height"
                android:layout_height="@dimen/voice_button_height"
                android:text="Button" />
            <Button
                android:id="@+id/voice_button_9"
                android:layout_width="@dimen/voice_button_height"
                android:layout_height="@dimen/voice_button_height"
                android:text="Button" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/voicing_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:onClick="cancelVoicing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/voicing_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:onClick="saveVoicing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</android.support.constraint.ConstraintLayout>
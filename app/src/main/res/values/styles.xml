<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- No action bar theme -->
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/convergence_background</item>
    </style>

    <style name="pianoKeyBlack">
        <item name="android:background">@drawable/piano_key_background_black</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">85dp</item>
    </style>

    <style name="pianoKeyWhite">
        <item name="android:background">@drawable/piano_key_background_white</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">120dp</item>
    </style>
</resources>
